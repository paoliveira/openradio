<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuriy.openradio.tv">

    <!-- Declare Leanback support -->
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <!-- Declare touchscreen not required -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="false" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:appCategory="audio"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:banner="@mipmap/ic_banner"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar" >

        <activity
            android:name=".view.activity.TvMainActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/open_radio_tv">
            <!-- This filter identifies app as being enabled for TV, and lets Google Play identify it as a TV app. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.TvSearchActivity" />

    </application>

</manifest>
